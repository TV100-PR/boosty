{
  "name": "@boosty/mcp-wallet-manager",
  "version": "0.1.0",
  "description": "HD wallet management, secure key storage, and fund distribution for Solana",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "db:migrate": "ts-node src/database/migrations/run.ts"
  },
  "dependencies": {
    "@boosty/mcp-shared": "workspace:*",
    "@solana/web3.js": "^1.91.0",
    "@solana/spl-token": "^0.4.0",
    "bip39": "^3.1.0",
    "ed25519-hd-key": "^1.3.0",
    "tweetnacl": "^1.0.3",
    "bs58": "^5.0.0",
    "pg": "^8.11.0",
    "drizzle-orm": "^0.29.0",
    "uuid": "^9.0.0",
    "pino": "^8.17.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/uuid": "^9.0.0",
    "drizzle-kit": "^0.20.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "tsup": "^8.0.0",
    "ts-node": "^10.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "solana",
    "wallet",
    "hd-wallet",
    "bip39",
    "bip44",
    "key-management",
    "defi"
  ],
  "license": "MIT"
}
