{
  "name": "@boosty/mcp-core-blockchain",
  "version": "1.0.0",
  "description": "Core blockchain interaction layer for Solana and EVM chains",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@solana/web3.js": "^1.95.0",
    "@solana/spl-token": "^0.4.6",
    "@coral-xyz/anchor": "^0.30.0",
    "viem": "^2.17.0",
    "bs58": "^5.0.0",
    "tweetnacl": "^1.0.3",
    "bip39": "^3.1.0",
    "ed25519-hd-key": "^1.3.0",
    "hdkey": "^2.1.0",
    "dotenv": "^16.4.0",
    "pino": "^9.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "tsup": "^8.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@boosty/mcp-shared": "workspace:*"
  }
}
